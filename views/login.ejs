<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/output.css?v=<%= Date.now() %>">
</head>

<body class="grey-bg">

    <%- include('nav.ejs') %>

    <main class="min-h-[calc(100dvh-64px)] flex items-center justify-center bg-gray-50 px-4">
        <form class="form w-full max-w-md bg-white shadow-md rounded-lg p-6">
            <h2 class="text-xl font-bold mb-6 text-center">로그인</h2>

            <!-- 아이디 -->
            <label class="form-label">아이디</label>
            <input name="username" class="input" autocomplete="username" />

            <!-- 비밀번호 -->
            <label class="form-label mt-4">비밀번호</label>
            <input name="password" type="password" class="input" autocomplete="current-password" />

            <!-- 기본 로그인 버튼 -->
            <div class="flex justify-center">
                <button 
                    type="submit" 
                    class="btn btn-primary mt-6 text-base"
                    style="width:300px; height:45px;">
                    로그인
                </button>
            </div>



            <!-- OR 구분선 -->
            <div class="relative my-6">
                <!-- <div class="border-t border-gray-300"></div> -->
                <span class="absolute inset-0 flex justify-center -top-3">
                    <span class="bg-white px-3 text-gray-500 text-sm">또는</span>
                </span>
            </div>

            <!-- 카카오 로그인 버튼 -->
            <a href="/auth/kakao" 
               class="w-full flex items-center justify-center gap-2 py-3 rounded-md">
               
               <img src="kakao_logo.png" alt="카카오" class="w-5 h-5" />
            </a>

            <!-- 회원가입 유도 -->
            <p class="text-center text-sm text-gray-500 mt-4">
                아직 계정이 없나요?
                <a href="/register" class="text-blue-600 font-medium hover:underline">
                    회원가입
                </a>
            </p>

        </form>
    </main>

</body>
</html>
