<h1 class="text-xl font-bold mb-4">받은 초대</h1>

<ul class="bg-white rounded shadow divide-y">
  <% invites.forEach(inv => { %>
    <li class="p-3">
      <div>스터디룸: <%= inv.roomId %></div>
      <div>초대한 사람: <%= inv.from %></div>

      <form method="POST" action="/invite/accept" class="mt-2">
        <input type="hidden" name="inviteId" value="<%= inv._id %>" />
        <button class="bg-green-600 text-white px-3 py-1 rounded text-sm">
          수락하기
        </button>
      </form>
    </li>
  <% }) %>
</ul>
